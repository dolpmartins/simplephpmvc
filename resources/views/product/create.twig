{% extends "partials/template.twig" %}

{% block content %}
    <div class="text-center mt-4">
        <h1>Create product</h1>
        <div class="row">
            <div class="col-12">
                <form method="post" action="/product/save">
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Name" name="name" />
                        </div>
                        <div class="col">
                            <input type="number" name="price" min="0" max="1000000" step="0.01" value="0.00" class="form-control" placeholder="Price" />
                        </div>
                        <div class="col">
                            <select class="form-control" id="producttype" name="producttypeid">
                                <option value="">Select a option</option>
                                {% for item in types %}
                                    <option value="{{item['ProductTypeId']}}">{{item['Name']}}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="w-100"><br /></div>
                    <button type="submit" class="btn btn-success float-right">save</button>
                    <a  href="/product/" class="btn btn-light float-right">cancel</a>    
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
