{% extends "partials/template.twig" %}

{% block content %}
    <div class="text-center mt-4">
        <h1>Edit product</h1>
        <div class="row">
            <div class="col-12">
                <form method="post" action="/product/update/{{product['ProductId']}}">
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="Name" name="name" value="{{product['Name']}}" />
                        </div>
                        <div class="col">
                            <input type="number" name="price" min="0" max="100" step="0.01" class="form-control" placeholder="Price" value="{{product['Price']}}" />
                        </div>
                        <div class="col">
                            <select class="form-control" id="producttype" name="producttypeid">
                                <option value="">Select a option</option>
                                {% for item in types %}
                                    {% if item['ProductTypeId'] == product['ProductTypeId']%}
                                        <option value="{{item['ProductTypeId']}}" selected>{{item['Name']}}</option>
                                    {% else %}
                                        <option value="{{item['ProductTypeId']}}">{{item['Name']}}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="w-100"><br /></div>
                    <button type="submit" class="btn btn-success float-right">save</button>
                    <a  href="/product/" class="btn btn-light float-right">cancel</a> 
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}

{% endblock %}